%%%%%             Nuevo comando \Chapter que agrupa las instrucciones de capítulo y tipo de numeración 
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\Chapter}[1]{ 
\chapter{#1}
\thispagestyle{capitulo}

%\indent
}

\newcommand{\Figura}{
\listoffigures % Lista de Figuras
\addcontentsline{toc}{chapter}{Lista de Figuras}             %Hace que aparezca en el índice de Contenido
}

\newcommand{\Cuadros}{
\listoftables % Lista de Cuadros o tablas
\addcontentsline{toc}{chapter}{Lista de Cuadros}           %Hace que aparezca en el índice de Contenido
}

\newcommand{\Res}[1]{
\chapter*{#1}
\addcontentsline{toc}{chapter}{#1} %Hace que aparezca en el índice de Contenido
\thispagestyle{capitulo}                                                    %Siendo inicio de capítulo, la numeración es centrada y abajo
}

\newcommand{\Ini}{

\pagestyle{plain1}

\pagenumbering{roman}  % Numeraci\'on romana
\addtocounter{page}{4}


%\tableofcontents %Tabla de contenido
}

\newcommand{\UnoA}{

%\newpage
\pagestyle{cuerpo}
\pagenumbering{arabic}  %Se pone únicamente desde aquí esta instrucción y la numeración empieza a ser arábiga
}

\newcommand{\Citar}[1]{
\begin{center}
\begin{spacing}{1}  
   $\ll$ \textit{#1} $\gg$
 \end{spacing}
\end{center}
}



\newcommand{\Biblio}{
\addtocounter{chapter}{1}  %Incrementa el contador de capítulo. De manera estándar, la Bibliografía en Latex no está 
			          %numerada, por lo que hay que hacerlo manual y aparte.  No modificar
\bibliographystyle{plainnat} % required for natbib 
}

\newcommand{\Bibliotoc}{
\addcontentsline{toc}{chapter}{\thechapter\ \ Bibliograf\'ia} %Hace que aparezca en el índice de contenido. 
}
